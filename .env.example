# Google Sheets (Opcional - para futuras integraciones)
# Obtén estas credenciales siguiendo: GOOGLE_SHEETS_QUICKSTART.md
GOOGLE_SHEETS_ID=your_google_sheet_id_here
GOOGLE_SHEETS_API_KEY=your_google_api_key_here

# Google Apps Script Web App URL (para actualizar Google Sheets)
# Sigue las instrucciones en google-apps-script.js
GOOGLE_APPS_SCRIPT_URL=your_web_app_url_here

# Email Service (Opcional)
EMAIL_SENDER=dummy@email.com
EMAIL_PASSWORD=

# Resend (Recomendado para envío de emails)
# Obtén tu API key en: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email de notificaciones (donde recibirás confirmaciones RSVP)
NOTIFICATION_EMAIL=tu_email@example.com

# Vercel Blob (Para almacenamiento de archivos)
# Obtén tu token en: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=
# Modo de acceso de objetos Blob: private (recomendado) o public
# Si no se define, el backend usa private por defecto
BLOB_OBJECT_ACCESS=private

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin Credentials
ADMIN_USER=admin
ADMIN_PASSWORD=your_secure_password_here
